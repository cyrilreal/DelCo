<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/tvHeader"
        android:textColor="@color/colorWhite50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etNumber"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:cursorVisible="false"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:maxLength="4" >

                <requestFocus />
            </EditText>

            <TableLayout
                android:id="@+id/tablayKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/Button01"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="1"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button02"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="2"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button03"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="3"
                        android:textSize="18dip" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/Button04"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="4"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button05"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="5"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button06"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="6"
                        android:textSize="18dip" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/Button07"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="7"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button08"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="8"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button09"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="9"
                        android:textSize="18dip" />
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/btnDecimal"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:text="."
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/Button0"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:textSize="18dip" />

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="56dp"
                        android:layout_height="52dp"
                        android:text="&lt;"
                        android:textSize="18dip" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center_horizontal"
                android:text="@string/EnterCodeNumber"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/btnOK"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Cyril/Documents/Programmation/AndroidStudioProjects/DelCo/app/src/main/res/layout-land/screen_number.xml -->