            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="aero.delco.ScreenNumber" >
        </activity>
        <activity android:name="aero.delco.ScreenResultKeyword" >
        </activity>
        <activity android:name="aero.delco.ScreenResultNumber" >
        </activity>
        <activity android:name="aero.delco.ScreenPickKeyword" >
        </activity>
        <activity android:name="aero.delco.ScreenSettings" >
        </activity>
        <activity android:name="aero.delco.ScreenHelp" >
        </activity>
    </application>

</manifest>